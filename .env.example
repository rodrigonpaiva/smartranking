# MongoDB Configuration
MONGODB_DB_NAME=smartranking
MONGODB_USER=root
MONGODB_PASSWORD=pin
MONGODB_URI=mongodb://root:password@localhost:27017/smartranking?authSource=admin

# Better Auth Configuration
BETTER_AUTH_SECRET=dev-secret-change-me-please-32chars
BETTER_AUTH_URL=http://localhost:8080
BETTER_AUTH_RATE_LIMIT_MAX=100
BETTER_AUTH_RATE_LIMIT_WINDOW=60
BETTER_AUTH_COOKIE_DOMAIN=
BETTER_AUTH_COOKIE_SAMESITE=lax
BETTER_AUTH_DISABLE_ORIGIN_CHECK=true

# CORS Configuration (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Server Configuration
PORT=8080
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=120
AUTH_RATE_LIMIT_TTL=60
AUTH_RATE_LIMIT_MAX=10

# Swagger (set to 'false' to disable in production)
SWAGGER_ENABLED=true
